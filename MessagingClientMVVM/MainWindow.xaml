<Window x:Name="window" x:Class="MessagingClientMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessagingClientMVVM"
        mc:Ignorable="d" Title="MainWindow" Height="600" Width="800">
    <Frame Source="Views/LoginPage.xaml" NavigationUIVisibility="Hidden"
           Height="{Binding ActualHeight, ElementName=window, Mode=OneWay}"
           Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}"/>
</Window>
